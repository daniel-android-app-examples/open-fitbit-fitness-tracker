<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="16dp" >
    <!-- Default screen margins, per the Android Design guidelines. -->
    <TextView
        android:id="@+id/device_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/data_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bind"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bind"
                android:drawableLeft="@drawable/bind"
                android:background="@drawable/button_bg_color_with_state"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                style="@style/Widget.Button_Custom"/>

            <Button
                android:id="@+id/unbind"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/unbind"
                android:drawableLeft="@drawable/unbind"
                android:background="@drawable/button_bg_color_with_state"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                style="@style/Widget.Button_Custom"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/scan"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scan"
                android:drawableLeft="@drawable/scan"
                android:background="@drawable/button_bg_color_with_state"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                style="@style/Widget.Button_Custom"/>

            <Button
                android:id="@+id/connect"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/connect"
                android:visibility="gone" />

            <Button
                android:id="@+id/disconnect"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/disconnect"
                android:drawableLeft="@drawable/disconnect"
                android:background="@drawable/button_bg_color_with_state"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                style="@style/Widget.Button_Custom"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/llConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/set_time"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_time"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/synctime"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>

                    <Button
                        android:id="@+id/read_battery"
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:text="@string/read_battery"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/battery_no_info"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/read_fw"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/read_deviceinfo"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/smartwatch"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                    <Button
                        android:id="@+id/set_vir"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/set_vir"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/vibration"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/height"
                            android:drawablePadding="3dp"
                            android:text="Height: 170 [cm]"
                            android:textColor="#1A237E"/>
                        <TextView
                            android:id="@+id/weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/scale"
                            android:drawablePadding="3dp"
                            android:text="Weight: 60 [Kg]"
                            android:textColor="#E64A19"/>
                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/gender"
                            android:drawablePadding="3dp"
                            android:text="Gender: Men"
                            android:textColor="#1A237E"/>
                        <TextView
                            android:id="@+id/stepgoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/award"
                            android:drawablePadding="3dp"
                            android:text="Step goal: 10.000"
                            android:textColor="#FDD835"/>
                        <TextView
                            android:id="@+id/age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Age: 24" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/set_userinfo"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/set_userinfo"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/user"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/getcursportdata"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sync_data"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/sync"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/last_sync"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/last_sync"
                            android:drawablePadding="3dp"
                            android:text="Sync: --"
                            android:textColor="#1A237E"/>
                        <TextView
                            android:id="@+id/currenttotal_steps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/footstep"
                            android:drawablePadding="3dp"
                            android:text="Steps: --"
                            android:textColor="#E64A19"/>
                        <TextView
                            android:id="@+id/currenttotal_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/distance"
                            android:drawablePadding="3dp"
                            android:text="Distance: --"
                            android:textColor="#1A237E"/>
                        <TextView
                            android:id="@+id/currenttotal_calories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/calories"
                            android:drawablePadding="3dp"
                            android:text="Calories: --"
                            android:textColor="#FDD835"/>
                        <TextView
                            android:id="@+id/currenttotal_sleeping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/moon"
                            android:drawablePadding="3dp"
                            android:text="Sleeping: --" />
                        <TextView
                            android:id="@+id/currenttotal_exercise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/running"
                            android:drawablePadding="3dp"
                            android:text="Total running: --"
                            android:textColor="#AD1457"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/bt_setgoalstep"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set the number of target steps to: xxx"
                        android:enabled="false"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/goal_steps"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/bt_open_blood"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Turn on blood pressure"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/blood_pressure"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                    <Button
                        android:id="@+id/bt_close_blood"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Close blood pressure"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/closeheart"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/data_heartrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/cardiogram"
                            android:drawablePadding="3dp"
                            android:text="Heart Rate: --"
                            android:textColor="#E64A19"/>
                        <TextView
                            android:id="@+id/oxygen_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Oxygen: --"
                            android:textColor="#1A237E"/>
                        <TextView
                            android:id="@+id/fatigue_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fatigue: --"
                            android:textColor="#FDD835"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/bloodpressure_data0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sisdias"
                            android:drawablePadding="3dp"
                            android:text="Systolic/Diastolic:" />
                        <TextView
                            android:id="@+id/bloodpressure_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- / -- [mm Hg]"
                            android:textColor="#AD1457"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/openheart"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/cardiogram"
                        android:text="@string/openheart"
                        android:background="@drawable/button_bg_color_with_state"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>

                    <Button
                        android:id="@+id/closeheart"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/closeheart"
                        android:drawableLeft="@drawable/closeheart2"
                        android:background="@drawable/button_bg_color_with_state"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/set_showmode"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/set_showmode"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/hour_format"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/set_alarm"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_alarm"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/alarm_clock"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/set_idletime"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_idletime"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/runner"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_color"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible" >
                    <RadioGroup
                        android:id="@+id/rgNotification1"
                        android:layout_width="0dip"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/callNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/call" />
                        <RadioButton
                            android:id="@+id/messageNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/message" />
                        <RadioButton
                            android:id="@+id/wechatNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/wechat" />
                        <RadioButton
                            android:id="@+id/qqNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/qq" />
                        <RadioButton
                            android:id="@+id/facebookNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:drawableRight="@drawable/facebook" />
                    </RadioGroup>
                    <RadioGroup
                        android:id="@+id/rgNotification2"
                        android:layout_width="0dip"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/skypeNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/skype" />
                        <RadioButton
                            android:id="@+id/twiterNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/twitter" />
                        <RadioButton
                            android:id="@+id/whatsappNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/whatsapp" />
                        <RadioButton
                            android:id="@+id/lineNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/line" />
                        <RadioButton
                            android:id="@+id/talkNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/talk" />

                    </RadioGroup>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <Button
                            android:id="@+id/bNotify"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/send_call_notification"
                            android:background="@drawable/button_bg_color_with_state"
                            android:drawableTop="@drawable/notification"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:textColor="@color/button_text_color"
                            style="@style/Widget.Button_Custom"/>
                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="TITLE"
                            android:text="TITLE" />

                        <EditText
                            android:id="@+id/etContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Notification content"
                            android:text="Notification content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#A93226"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/previous_daySteps"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/button_bg_color_with_state"
                            android:src="@drawable/left_arrow"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:textColor="@color/button_text_color"
                            style="@style/Widget.Button_Custom"/>
                        <TextView
                            android:id="@+id/stepsChart_date"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:drawablePadding="3dp"
                            android:text=""
                            android:textColor="#ffffff"/>
                        <ImageButton
                            android:id="@+id/next_daySteps"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text=""
                            android:background="@drawable/button_bg_color_with_state"
                            android:src="@drawable/right_arrow"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:textColor="@color/button_text_color"
                            style="@style/Widget.Button_Custom"/>
                    </LinearLayout>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/stepsBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                    <TextView
                        android:id="@+id/sleepQltyTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/moon2"
                        android:text="Sleep Qlty (0:Bad-100:Great)"
                        android:textColor="#ffffff"
                        android:background="#154360"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/sleepQltyLineChart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="#154360"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"/>
                    <ProgressBar
                        android:id="@+id/progressBarGettingSteps"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"/>
                    <Button
                        android:id="@+id/getStepsData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/getdata"
                        android:background="@drawable/button_bg_color_with_state"
                        android:drawableTop="@drawable/graph"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        style="@style/Widget.Button_Custom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/set_photo"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_photo" />
                    <Button
                        android:id="@+id/set_sleep"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_sleep" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/set_autoheart"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_autoheart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/set_fuzhu"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_fuzhu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Switch
                        android:id="@+id/sAllday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/set_parameters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/set_parameters" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/setLanguage"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set system language" />
                    <Button
                        android:id="@+id/send_weather"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Send weather information" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/bt_getmutipleSportData"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Synchronous multi-motion data" />
                    <Button
                        android:id="@+id/bt_setHeartRateArea"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set heart rate interval" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <EditText
                android:id="@+id/etStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/heart_start_tset"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sync" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tvSync"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

</LinearLayout>